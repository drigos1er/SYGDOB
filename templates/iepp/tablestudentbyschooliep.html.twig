{% extends 'layoutiep.html.twig' %}

{% block title %}SYGDOB| Liste d'élèves{% endblock %}

{% block body %}
    <div class="container-fluid">






        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center">LISTE DES ELEVES : <span style="color: brown; font-weight: bold">{{ primschool.schoolname }} </span> </h4>


                        {% for message in app.flashes('success')  %}
                            <div class="alert alert-success"> {{ message }}</div>
                        {% endfor  %}


                        <div class="table-responsive">
                            <div class="text-center"><button type="button"
                                         class="btn waves-effect waves-light btn-warning text-center"><i class="fa fa-check-circle"></i>Valider les voeux saisis de cette école</button></div>
                            <table  class="table table-hover table-bordered table-striped table-sm mb-0 display " id="studentbyschool" style="width:100%">
                                <thead class="bg-info text-white text-center">
                                <tr>
                                    <th>Matricule</th>
                                    <th>Nom</th>
                                    <th>Prénoms</th>
                                    <th>Date de Naissance</th>
                                    <th>Lieu de Naissance</th>
                                    <th>Genre</th>
                                    <th>Nationalité</th>
                                    <th>Résidence</th>
                                    <th>Voeu1</th>
                                    <th>Voeu2</th>
                                    <th>Voeu3</th>
                                    <th>Voeux validés</th>
                                </tr>
                                </thead>
                                <tbody>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
{% endblock %}

{% extends 'layout.html.twig' %}

{% block title %}SYGDOB| MODIFICATION MOT DE PASSE{% endblock %}

{% block body %}

    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url({{ asset('build/content/images/background/bg.jpg') }}) no-repeat center center; background-size: cover;">
            <div class="auth-box p-4 bg-white rounded">



                <div id="loginform">
                    <div class="logo">
                        <h2 class="box-title mb-3">MODIFICATION MOT DE PASSE</h2>
                    </div>
                    <!-- Form -->
                    <div class="row">

                        <div class="col-12">

                            {% for message in app.flashes('success')  %}
                                <div class="alert alert-success"> {{ message }}</div>
                            {% endfor  %}

                                {{ form_start(form,{'attr': {'class': 'form-horizontal mt-3 form-material'}}) }}
                                <div class="form-group mb-3">



                                        <div class="col-xs-12">

                                            {{ form_widget(form.oldpwd,{'attr':{'placeholder': 'Mot de passe actuel ','class': 'form-control'}}) }}


                                        </div>
                                        <div style="color: red">
                                            {{ form_errors(form.oldpwd) }}
                                        </div>




                                </div>
                                <div class="form-group mb-3 ">
                                    <div class="col-xs-12">
                                        {{ form_widget(form.newpwd,{'attr':{'placeholder': 'Nouveau mot de passe','class': 'form-control'}}) }}
                                    </div>
                                    <div style="color: red">
                                        {{ form_errors(form.newpwd) }}
                                    </div>


                                </div>




                                 <div class="form-group mb-3 ">
                                <div class="col-xs-12">
                                    {{ form_widget(form.confirmpwd,{'attr':{'placeholder': 'Confirmer Mot de passe','class': 'form-control'}}) }}
                                </div>
                                <div style="color: red">
                                    {{ form_errors(form.confirmpwd) }}
                                </div>


                            </div>




                                <div class="form-group text-center mb-3">
                                    <div class="col-xs-12">
                                        <button class="btn btn-success btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" >Modifier</button>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>









            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->

{% extends 'layout.html.twig' %}

{% block title %}SYGDOB| CONNECTEZ-VOUS{% endblock %}

{% block body %}

    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url({{ asset('build/content/images/background/bg.jpg') }}) no-repeat center center; background-size: cover;">
            <div class="auth-box p-4 bg-white rounded">



                <div id="loginform">
                    <div class="logo">
                        <h2 class="box-title mb-3 text-center" ><img src="{{ asset('build/content/images/arm.png') }}" alt="homepage" class="light-logo"  width="100"/><br><br>MENETFP-SYGDOB</h2>
                    </div>
                    <!-- Form -->
                    <div class="row">

                        <div class="col-12">
                            {% if error  %}
                                <div class="alert alert-danger"> {{ error.messageKey|trans(error.messageData, 'security') }}</div>

                            {% endif  %}
                            {% for message in app.flashes('success')  %}
                                <div class="alert alert-success"> {{ message }}</div>
                            {% endfor  %}
                            <form class="form-horizontal mt-3 form-material" id="loginform" action="{{ path('security_login') }}" method="post">

                                <div class="form-group mb-3">
                                    <div class="col-xs-12">
                                        <i class="fa fa-user mr-1"></i>

                                        <input type="text" id="username" name="_username" value="" required="required" placeholder="Nom d'utilisateur" class="form-control"/>

                                    </div>


                                </div>
                                <div class="form-group mb-3 ">
                                    <div class="col-xs-12">

                                        <i class="fa fa-lock mr-1"></i>
                                        <input type="password" id="password" name="_password" required="required" placeholder="Mot de Passe" class="form-control" />
                                    </div>

                                </div>




                                <div class="form-group">
                                    <div class="d-flex">

                                        <div class="ml-auto">
                                            <a href="javascript:void(0)" id="to-recover" class="text-muted float-right"><i class="fa fa-question-circle mr-1"></i> Mot de passe oublié ?</a>
                                        </div>
                                    </div>
                                </div>





                                <div class="form-group text-center mb-3">
                                    <div class="col-xs-12">
                                        <button class="btn btn-success btn-lg btn-block  waves-effect waves-light" type="submit" id="_submit" name="_submit" >Se connecter</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>








                <div id="recoverform">
                    <div class="logo">
                        <h3 class="font-weight-medium mb-3">Réinitialisation Mot de Passe</h3>
                        <span class="text-muted">Entrer votre nom d'utilisateur et suivez les instructions !</span>
                    </div>
                    <div class="row mt-3 form-material">
                        <!-- Form -->
                        <form class="col-12" action="{{ path('security_resetpwd') }}" method="post">
                            <!-- email -->
                            <div class="form-group row">
                                <div class="col-12">
                                    <input class="form-control" type="text" required="required" placeholder="Nom d'utilisateur" name="username">
                                </div>
                            </div>
                            <!-- pwd -->
                            <div class="row mt-3">
                                <div class="col-12">
                                    <button class="btn btn-block btn-lg btn-success" type="submit" name="action">Réinitialiser mon mot de passe</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->

{% extends 'layout.html.twig' %}

{% block title %}SYGDOB| MON PROFIL{% endblock %}

{% block body %}

    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url({{ asset('build/content/images/background/bg.jpg') }}) no-repeat center center; background-size: cover;">
            <div class="auth-box p-4 bg-white rounded">
                <div>
                    <div class="logo">
                        <h2 class="box-title mb-3">MON PROFIL</h2>
                    </div>
                    <!-- Form -->
                    <div class="row">
                        <div class="col-12">
                            {% for message in app.flashes('success')  %}
                                <div class="alert alert-success"> {{ message }}</div>
                            {% endfor  %}
                            <div class="card">
                                <div class="card-body">
                                    <center class="mt-4">


                                        {% if userprofil.picture =="" %}
                                            <img src="{{ asset('build/content/images/default-avatar.png') }}" class="rounded-circle" width="150" alt="user"/>

                                        {% endif %}

                                        {% if userprofil.picture !="" %}

                                            <img src="/SYGDOB/public/images/users/{{ userprofil.picture }}" class="rounded-circle" width="150" alt="user" />


                                        {% endif %}






                                    </center>
                                </div>
                                <div>

                            </div>

                            {{ form_start(form,{'attr': {'class': 'form-horizontal mt-3 form-material'}}) }}


                                <div class="form-group mb-3 ">
                                    <div class="col-xs-12">
                                        {{ form_widget(form.firstname,{'attr': {'placeholder': 'Nom ','class': 'form-control'}}) }}
                                    </div>

                                </div>
                                <div class="form-group mb-3 ">
                                    <div class="col-xs-12">
                                        {{ form_widget(form.lastname,{'attr': {'placeholder': 'Prénoms ','class': 'form-control'}}) }}
                                    </div>

                                </div>








                            <div class="form-group mb-3">
                                <div class="col-xs-12">
                                {{ form_widget(form.gender,{'attr': {'id': 'inlineFormCustomSelect','class': 'custom-select mr-sm-2'}}) }}
                                </div>



                            </div>



                            <div class="form-group mb-3">
                                <div class="col-xs-12">
                                    {{ form_widget(form.email,{'attr': {'Placeholder': 'Adresse email','class': 'form-control'}}) }}
                                </div>

                            </div>


                            <div class="form-group mb-3">
                                <div class="col-xs-12">
                                    {{ form_widget(form.phone,{'attr': {'Placeholder': 'Téléphone','class': 'form-control'}}) }}
                                </div>

                            </div>





                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Photo de Profil</span>
                                </div>
                                <div class="custom-file">
                                    {{ form_widget(form.picture,{'attr': {'id': 'exampleInputFile','class': 'form-control-file'}}) }}


                                </div>
                                <div style="color: red">
                                    {{ form_errors(form.picture) }}
                                </div>
                            </div>

                                <div class="form-group text-center mb-3">
                                    <div class="col-xs-12">
                                        <button class="btn btn-success btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" >Modifier</button>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                                <div class="form-group mb-0 mt-2 ">
                                    <div class="col-sm-12 text-center ">
                                       <a href="{{ path('sygdob_dashboardcfiep') }}" class="text-danger ml-1 ">  <i class="fa fa-hand-point-right mr-1"></i>Accéder au tableau de bord</a>
                                    </div>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <!-- ============================================================== -->
    </div>


{% endblock %}

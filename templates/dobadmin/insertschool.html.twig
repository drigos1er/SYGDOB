{% extends 'layoutdobadmin.html.twig' %}

{% block title %}SYGDOB| Saisie  Etablissment{% endblock %}

{% block body %}
    <div class="container-fluid">

        <!-- Row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card ">
                    <div class="card-header bg-info">
                        <h4 class="card-title text-white text-center">AJOUT ETABLISSEMENT </h4>



                    </div>

                        {{ form_start(form,{'attr': {'class': 'form-horizontal'}}) }}
                        <div class="form-body">
                            {% for message in app.flashes('error')  %}
                                <div class="alert alert-danger"> {{ message }}</div>
                            {% endfor  %}

                            <div class="card-body">

                                <h6 class="card-title"><i class="mdi mdi-home"></i></h6>
                                <hr class="mt-0 mb-5">
                            </div>



                            <div class="card-body">
                                <div class="row" style="margin-top: -71px;">

                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Code</label>
                                            <div class="col-md-9">



                                                {{ form_widget(form.id,{'id': 'inputEmail3','attr': {'placeholder': 'Code ','class': 'form-control'}}) }}







                                            </div>
                                            <div style="color: red">
                                                {{ form_errors(form.id) }}
                                            </div>
                                        </div>

                                        <!--/span-->
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Libellé</label>
                                            <div class="col-md-9">



                                                {{ form_widget(form.schoolname,{'id': 'inputEmail3','attr': {'placeholder': 'Libellé ','class': 'form-control'}}) }}







                                            </div>
                                            <div style="color: red">
                                                {{ form_errors(form.schoolname) }}
                                            </div>
                                        </div>

                                        <!--/span-->
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group  row">
                                            <label class="control-label text-right col-md-3">Type</label>
                                            <div class="col-md-9">
                                                {{ form_widget(form.schooltype,{'attr': {'class': 'select2 form-control custom-select'}}) }}

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Genre</label>
                                            <div class="col-md-9">

                                                {{ form_widget(form.schoolkind,{'attr': {'class': 'select2 form-control custom-select'}}) }}


                                            </div>










                                        </div>
                                    </div>


                                    <div class="col-md-3">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Ville</label>
                                            <div class="col-md-9">



                                                {{ form_widget(form.town,{'id': 'inputEmail3','attr': {'placeholder': 'Commune/Ville','class': 'form-control'}}) }}







                                            </div>
                                            <div style="color: red">
                                                {{ form_errors(form.town) }}
                                            </div>
                                        </div>

                                        <!--/span-->
                                    </div>

                                    <!--/span-->
                                    <div class="col-md-5">
                                        <div class="form-group  row">
                                            <label class="control-label text-right col-md-3">DRENETFP</label>
                                            <div class="col-md-9">
                                                {{ form_widget(form.drenddn,{'attr': {'class': 'select2 form-control custom-select'}}) }}

                                            </div>
                                        </div>
                                    </div>



                                    <!--/span-->
                                </div>
                                <!--/row-->


                                <!--/row-->
                                <br>



                                <hr class="mt-0 mb-5">
                            </div>










                            <div class="card-body">





                            <div class="form-actions">
                                <div class="card-body">
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-success">Enregistrer</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <!-- End Row -->













    </div>
{% endblock %}
